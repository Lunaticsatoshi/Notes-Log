<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li class="notification is-danger"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container mx-auto">
  <div class="field">
    <%= form.label :title, class: "label" %>
    <div class="control">
      <%= form.text_field :title, class: "input", placeholder: "Text input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <div class="control">
      <%= form.text_field :description, class: "textarea" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "button is-info" %>
  </div>
</div>
<% end %>
